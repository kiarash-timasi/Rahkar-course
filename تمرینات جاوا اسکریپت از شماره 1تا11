// بزرگتریت عدد آرایه
var arr = [1,13,22,123,49];
var largest = arr[0];

for (var i = 0; i < arr.length; i++) {
    if (largest < arr[i] ) {
        largest = arr[i];
    }
}
console.log(largest);

