  //کوچکترین عدد آرایه
var arr= [1,13,22,123,49];
var smallest = arr[0];

for (var i = 0; i < arr.length; i++) {
    if (arr[i] < smallest) {
        smallest = arr[i];
    }
}

console.log(smallest);

