// چاپ مجموع اعداد آرایه
	var arr = [1,13,22,123,49];
	
	var sum = 0;
	
	for (let i = 0; i < arr.length; i++) {
		sum += arr[i];
	}
	
	console.log("Sum is " + sum)
  
