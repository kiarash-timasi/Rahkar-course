//تمرین چاپ اعداد فرد بین 1 تا 10000
let i 
for(i=1;i<=10000; i++){
  if(i%2==1){
    console.log(i)
  }
}

//--------------------------------------------

//جدول ضرب
var result = 'x ';
for (var i = 0; i < 11; i++) {

    for (var j = 0; j < 11; j++) {

        if(i == 0 && j > 0){
          result += '[' + j + ']';
        } 
        else if(j == 0 && i>0){
          result += '[' + i + '] ';
        } 
        else if(i>0 && j>0){
        result += (i*j) + ' ';
        }
    }
    result += '\n'
}

console.log(result);

